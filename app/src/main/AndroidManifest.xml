        </receiver>

        <meta-data
            android:name="UMENG_APPKEY"
            android:value="5f56eb117823567fd86554cf" />
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="baidu" />
        <meta-data
            android:name="UMENG_MESSAGE_SECRET"
            android:value="02039776f9ebdfe53805033b18edfb94" />

